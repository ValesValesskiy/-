{
  "extends": "@react-native/typescript-config",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"],
  "compilerOptions": {
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@entities/*": ["./src/entities/*"],
      "@store/*": ["./src/store/*"],
      "@features/*": ["./src/features/*"],
      "@screens/*": ["./src/screens/*"],
      "@layouts/*": ["./src/layouts/*"]
    }
  }
}
